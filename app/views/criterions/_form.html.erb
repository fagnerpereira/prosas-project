<div class="overflow-hidden bg-white rounded shadow text-slate-500 shadow-slate-200">
  <%= form_with(model: criterion, class: "p-6") do |form| %>
    <% if criterion.errors.any? %>
      <!-- Component: Danger Alert With Icon - Title - Text -->
      <div class="flex items-start w-full gap-4 px-4 py-3 text-sm text-pink-500 border border-pink-100 rounded bg-pink-50" role="alert">
        <!-- Icon -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" role="graphics-symbol" aria-labelledby="title-09 desc-09">
          <title id="title-09">Icon title</title>
          <desc id="desc-09">A more detailed description of the icon</desc>
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <!-- Text -->
        <div>
          <% criterion.errors.each do |error| %>
            <p><%= error.full_message %></p>
          <% end %>
        </div>
      </div>
      <!-- End Danger Alert With Icon - Title - Text -->
    <% end %>

    <div class="my-5">
      <%= form.text_field :name,
                          placeholder: 'Nome do criterio',
                          class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= form.text_field :weight,
                          placeholder: 'Peso do criterio',
                          class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= form.submit class: "btn-primary" %>
      <%= link_to 'Cancelar', criterions_path, class: 'btn-outline' %>
    </div>
  <% end %>
</div>
